{
  "name": "botwallets",
  "version": "0.3.0",
  "description": "Bitcoin ecash wallets for bots - simple Cashu wallet API for autonomous agents",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "botwallets": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./telegram": {
      "import": {
        "types": "./dist/telegram.d.ts",
        "default": "./dist/telegram.js"
      },
      "require": {
        "types": "./dist/telegram.d.cts",
        "default": "./dist/telegram.cjs"
      }
    },
    "./slack": {
      "import": {
        "types": "./dist/slack.d.ts",
        "default": "./dist/slack.js"
      },
      "require": {
        "types": "./dist/slack.d.cts",
        "default": "./dist/slack.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "bitcoin",
    "ecash",
    "cashu",
    "wallet",
    "bot",
    "agent",
    "lightning"
  ],
  "license": "MIT",
  "dependencies": {
    "@cashu/cashu-ts": "^3.4.1",
    "better-sqlite3": "^11.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vitest": "^2.0.0"
  },
  "peerDependencies": {
    "telegraf": "^4.0.0",
    "@slack/bolt": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "telegraf": {
      "optional": true
    },
    "@slack/bolt": {
      "optional": true
    }
  }
}
